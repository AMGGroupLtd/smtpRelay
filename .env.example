# Microsoft Entra / Azure AD OAuth2 settings
OAUTH_CLIENT_ID="your-client-id"
OAUTH_CLIENT_SECRET="your-client-secret"
OAUTH_TENANT_ID="your-tenant-id"

# Microsoft Graph API settings
GRAPH_API_SCOPE="https://graph.microsoft.com/.default"
GRAPH_API_ENDPOINT="https://graph.microsoft.com/v1.0"

# SMTP relay settings
SMTP_LISTEN_PORT="2525"
SMTP_HOSTNAME="smtp-oauth-relay.local"
SMTP_MAX_MESSAGE_SIZE="10485760" # 10 MB

# Public Port Config
DOCKER_PORT="" # If set, then expose this port, otherwise don't expose any
# If port is not exposed, then containers need to have the SMTP_DOCKER_NETWORK
# added to them to allow access.
# PLEASE ENSURE THIS PORT IS BLOCKED FROM PUBLIC ACCESS! or you will be flagged as an open relay, and thats BAD!

# Logging
LOG_LEVEL="info"

# Disable TLS/SSL SMTP for clients
SMTP_DISABLE_TLS=true
SMTP_REQUIRE_TLS=false
SMTP_TLS_SOURCE="off"

# Docker Settings
SMTP_DOCKER_NAME="smtp-relay"
SMTP_DOCKER_NETWORK="smtp"
